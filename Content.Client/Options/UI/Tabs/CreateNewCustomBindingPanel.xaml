<tabs:CreateNewCustomBindingPanel xmlns="https://spacestation14.io"
                                  xmlns:tabs="clr-namespace:Content.Client.Options.UI.Tabs">
    <BoxContainer  Orientation="Vertical" Margin="8">
        <Label Text="Create New Bind" HorizontalAlignment="Center"></Label>
        <Control MinSize="450,10"></Control>

        <BoxContainer Orientation="Horizontal" SeparationOverride="8" HorizontalExpand="True">

            <Button Text="Action:" HorizontalAlignment="Left"></Button>

            <LineEdit Text="Enter your custom command..."
                      Name="NewBindingCommandText"
                      StyleClasses="chatLineEdit"
                      MinSize="400,10"
                      HorizontalExpand="True" />
            <Control HorizontalExpand="True" ></Control>

            <Button Text="Press key" HorizontalAlignment="Right"></Button>
        </BoxContainer>
        <OptionButton Name="OptionsDropDown"></OptionButton>
        <Control MinSize="0,10"></Control>
        <Button Text="Close" HorizontalAlignment="Left"></Button>
    </BoxContainer>
</tabs:CreateNewCustomBindingPanel>
